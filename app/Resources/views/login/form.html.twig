{% extends "login/base.html.twig" %}

{% block form %}
    <form action="{{ path('login') }}" method="post">
        <fieldset>
            <legend>{% trans %}Login{% endtrans %}</legend>

            <div class="w100">
                <label for="username">{% trans %}Username{% endtrans %}</label>
                <input id="username" name="username" class="middle-size{% if failure.password %} validation-failed{% endif %}" type="text" value="{{ (username|default(''))|escape('html_attr') }}">
            </div>

            <div class="w100 clear">
                <label for="password">{% trans %}Password{% endtrans %}</label>
                <input id="password" name="password" class="middle-size{% if failure.password %} validation-failed{% endif %}" type="password">
            </div>

            <div class="w100 clear">
                <label for="autologin" class="small">{% trans %}Remember me{% endtrans %}</label>
                <input id="autologin" name="autologin" type="checkbox">
            </div>
        </fieldset>

        {% block login_messages %}
            {% block login_messages_error %}
                {% if failure.username %}
                    <p class="error">{% trans %}The username is not known.{% endtrans %}</p>
                {% elseif failure.password %}
                    <p class="error">{% trans %}The password was incorrect.{% endtrans %}</p>
                {% elseif failure.activation %}
                    <p class="error">{% trans %}The account has not been activated.<br>Have a look into your email inbox.{% endtrans %}</p>
                {% endif %}
            {% endblock %}
        {% endblock %}

        <div class="c">
            <input type="submit" value="{% trans %}Login{% endtrans %}" name="submit">
        </div>
    </form>
{% endblock %}